{
  "name": "aztec-token-partition-table",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "./dest/index.js",
  "scripts": {
    "build": "yarn clean && tsc -b && webpack",
    "install:noir": "curl -L https://raw.githubusercontent.com/noir-lang/noirup/main/install | bash noirup -v v0.18.0-aztec.5",
    "install:sandbox": "docker pull aztecprotocol/aztec-sandbox:0.16.9",
    "clean": "rm -rf ./dest .tsbuildinfo",
    "start:sandbox": "SANDBOX_VERSION=0.16.9 /bin/bash -c \"$(curl -fsSL 'https://sandbox.aztec.network')\" ",
    "formatting": "prettier --check ./src && eslint ./src",
    "formatting:fix": "prettier -w ./src",
    "compile": "yarn compile:token && yarn compile:attestor",
    "compile:attestor": "aztec-cli compile src/contracts/attestor --outdir ../../artifacts --typescript ../../artifacts --interface \"../token/src/interfaces\"",
    "compile:token": "aztec-cli compile src/contracts/token --outdir ../../artifacts --typescript ../../artifacts",
    "compile:local": "ts-node --esm ../aztec-packages/yarn-project/cli/src/bin/index.ts compile \"src/contracts/token\" --outdir \"../../artifacts\" --typescript \"../../artifacts\"",
    "test:integration": "NODE_NO_WARNINGS=1 node --experimental-vm-modules $(yarn bin jest) --runInBand"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testRegex": "./src/.*\\.test\\.ts$",
    "rootDir": "./src"
  },
  "dependencies": {
    "@aztec/aztec.js": "0.16.9",
    "@aztec/circuits.js": "0.16.9",
    "@aztec/foundation": "0.16.9",
    "@aztec/types": "0.16.9"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.4",
    "@types/jest": "^29.5.0",
    "@types/mocha": "^10.0.3",
    "@types/node": "^20.5.9",
    "eslint": "^8.21.0",
    "jest": "^29.6.4",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "files": [
    "dest",
    "src",
    "!*.test.*"
  ],
  "types": "./dest/index.d.ts"
}
