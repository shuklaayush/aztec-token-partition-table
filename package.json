{
  "name": "aztec-token-partition-table",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "./dest/index.js",
  "scripts": {
    "build": "yarn clean && yarn compile && yarn codegen && tsc -b && webpack",
    "clean": "rm -rf ./dest .tsbuildinfo ./src/artifacts ./src/contracts/target",
    "formatting": "prettier --check ./src && eslint ./src",
    "formatting:fix": "prettier -w ./src",
    "compile": "yarn compile:attestor && yarn compile:token",
    "codegen": "yarn codegen:attestor && yarn codegen:token",
    "compile:attestor": "cd src/contracts/attestor && aztec-nargo compile",
    "compile:token": "cd src/contracts/token && aztec-nargo compile",
    "codegen:attestor": "aztec-cli codegen --outdir src/artifacts --ts src/contracts/attestor/target && aztec-cli codegen --outdir src/contracts/token/src/interfaces --nr src/contracts/attestor/target",
    "codegen:token": "aztec-cli codegen --outdir src/artifacts --ts src/contracts/token/target",
    "test": "NODE_NO_WARNINGS=1 node --experimental-vm-modules $(yarn bin jest) --runInBand"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testRegex": "./src/.*\\.test\\.ts$",
    "rootDir": "./src"
  },
  "dependencies": {
    "@aztec/accounts": "^0.17.0",
    "@aztec/aztec.js": "0.17.0",
    "@aztec/circuits.js": "0.17.0",
    "@aztec/foundation": "0.17.0",
    "@aztec/types": "0.17.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.4",
    "@types/jest": "^29.5.0",
    "@types/mocha": "^10.0.3",
    "@types/node": "^20.5.9",
    "eslint": "^8.21.0",
    "jest": "^29.6.4",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "files": [
    "dest",
    "src",
    "!*.test.*"
  ],
  "types": "./dest/index.d.ts"
}
